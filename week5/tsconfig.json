{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "Node",
      "target": "ESNext",
      "noImplicitAny": false,
      "removeComments": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "experimentalDecorators": true,
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }